{
  "manifest_version": 3,
  "name": "Google Analytics & GTM Detector",
  "version": "1.1",
  "description": "Detects presence of Google Analytics, GTM scripts, and Google Site Verification meta tags.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "common/icon16.png",
    "48": "common/icon48.png",
    "128": "common/icon128.png"
  },
  "action": {
    "default_title": "Detect GA & GTM",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "common/icon16.png",
      "48": "common/icon48.png",
      "128": "common/icon128.png"
    }
  }
}
